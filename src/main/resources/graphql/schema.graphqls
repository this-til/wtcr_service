directive @role(role:String!) on FIELD_DEFINITION

type Query {
    self : User

    getUserById(id : ID) : User  @role(role :"EDITOR")
    getUserByAccount(account : String) : User  @role(role:"EDITOR")
    getUserList(page: Int, size : Int) : [User] @role(role:"EDITOR")
    getUserListByName(name: String, page: Int, size : Int) : [User]  @role(role:"EDITOR")

    getArticleById(id: ID) : Article @role(role:"EDITOR")
    getArticleList(page : Int, size : Int) : [Article] @role(role:"EDITOR")

}


type User {
    id: ID!
    account: String!
    name: String
    email: String
    phone: String
    headPath: String
    gender: String!
    permission: String!
}

